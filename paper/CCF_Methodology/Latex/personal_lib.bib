@book{montpetit_defense_2016,
	address = {Cambridge},
	series = {Cambridge {Studies} in {Comparative} {Public} {Policy}},
	title = {In {Defense} of {Pluralism}: {Policy} {Disagreement} and its {Media} {Coverage}},
	isbn = {978-1-107-14678-5},
