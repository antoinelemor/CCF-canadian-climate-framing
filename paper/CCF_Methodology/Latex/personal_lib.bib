@article{eichenberger_when_2023,
	title = {When do decision makers listen (less) to experts? {The} {Swiss} government's implementation of scientific advice during the {COVID}-19 crisis},
	volume = {n/a},
	issn = {1541-0072},
	shorttitle = {When do decision makers listen (less) to experts?},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/psj.12494},
