	author = {Parkhurst, Justin},
	year = {2017},
	note = {Accepted: 2017-11-01 23:55:55},
	keywords = {Decision-making, Democracy, Evidence-based medicine, Evidence-based practice, Good governance, HIV, Public policy, bic Book Industry Communication::J Society \& social sciences::JP Politics \& government::JPA Political science \& theory, evaluation, policy sciences, research, social policy},
