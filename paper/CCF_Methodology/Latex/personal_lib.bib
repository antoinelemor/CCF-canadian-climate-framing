	number = {4},
	urldate = {2023-01-18},
	journal = {BMJ Global Health},
	author = {Vickery, Jamie and Atkinson, Paul and Lin, Leesa and Rubin, Olivier and Upshur, Ross and Yeoh, Eng-Kiong and Boyer, Chris and Errett, Nicole A},
	month = apr,
	year = {2022},
	pages = {e008268},
}

