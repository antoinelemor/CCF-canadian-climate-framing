@phdthesis{rapson_assessing_2021,
	address = {Ann Arbor},
	type = {M.{P}.{H}.},
	title = {Assessing the {Influence} of {Individualism} vs. {Collectivism} at the {National} {Level} on {Government} {Response} {Measures} to {Covid}-19},
