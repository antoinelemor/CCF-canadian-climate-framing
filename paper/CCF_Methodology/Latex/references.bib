	doi = {10.2139/ssrn.5126141},
	abstract = {Recent growth in the use of experimental designs and econometric models in public administration and policy research has advanced the ability to establish cause-and-effect relationships. However, many studies overlook how causal effects evolve over time, despite the significant theoretical and practical implications of such temporal dynamics. This oversight is problematic, as interventions of scholarly interest-such as leadership training or the adoption of new technology-are likely to produce impacts that unfold in complex, non-static ways. In this paper, we present a conceptual framework for understanding the temporal trajectories of causal effects and illustrate some common patterns using simulation data. We then introduce Bayesian Changepoint Models as a methodological solution for identifying shifts in the average, variance, or trend of treatment effect series-providing a more rigorous yet straightforward alternative to the common practice of visually inspecting graphs. Finally, we demonstrate the utility of our approach by applying it to an empirical case that examines the impact of monitoring technologies on street-level bureaucrats' behavior. Our study highlights the potential of exploring temporal changes in effects to deepen theoretical understanding of why and how the effects occur, moving beyond static conceptions of causality focused solely on snapshots of effects or time-averaged effects.},
	language = {en},
	urldate = {2025-02-19},
	publisher = {Social Science Research Network},
	author = {Anastasopoulos, Jason and Kang, Inkyu},
	month = jan,
	year = {2025},
	keywords = {bayesian, bayesian structural time series, causal inference, change point models, longitudinal, policy analysis, public administration, synthetic controls, time series},
}
