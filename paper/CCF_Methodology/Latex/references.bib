	author = {Grundmann, Reiner and Krishnamurthy, Ramesh},
	month = sep,
	year = {2010},
	keywords = {France, Germany, Goffman, UK, US, causal interpretation, climate change, comparative data, corpus linguistics-based approach, frames, journalists, media coverage, moral evaluation, national climate change policies, problem definition, treatment recommendation for the item described},
